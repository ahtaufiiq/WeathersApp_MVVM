<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="action"
            type="com.example.ataufiq.weathersapp_mvvm.DetailActivity.DetailUserActionListener"/>
        <variable
            name="vm"
            type="com.example.ataufiq.weathersapp_mvvm.DetailActivity.DetailViewModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDetailTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:maxLines="2"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:text="@{vm.details.name}"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    imageUrl="@{vm.details.icon}"/>
    </LinearLayout>
</layout>